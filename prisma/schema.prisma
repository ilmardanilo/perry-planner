generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        String   @id @default(uuid())
  nome      String
  email     String?  @unique
  senha     String?
  telefone  String
  bairro    String
  rua       String
  numero    String
  cpj_cnpj  String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  clientes ClienteEmpresa[] @relation("Cliente_Usuario")
  empresas ClienteEmpresa[] @relation("Empresa_Usuario")

  @@map("usuario")
}

model ClienteEmpresa {
  id            String   @id @default(uuid())
  clienteId     String
  empresaId     String
  diaVencimento Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())

  cliente Usuario @relation("Cliente_Usuario", fields: [clienteId], references: [id])
  empresa Usuario @relation("Empresa_Usuario", fields: [empresaId], references: [id])
  contas  Conta[]

  @@map("clienteEmpresa")
}

model Conta {
  id               String    @id @default(uuid())
  clienteEmpresaId String
  dataFechamento   DateTime
  dataVencido      DateTime
  juros            Float     @default(0)
  total            Float
  dataJuros        DateTime?
  estaPaga         Boolean   @default(false)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @default(now())

  clienteEmpresa ClienteEmpresa @relation(fields: [clienteEmpresaId], references: [id])
  movimentos     Movimento[]

  @@map("conta")
}

model Movimento {
  id        String   @id @default(uuid())
  contaId   String
  valor     Float
  tipo      Tipo
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  conta Conta @relation(fields: [contaId], references: [id])

  @@map("movimento")
}

enum Tipo {
  COMPRA
  PAGAMENTO
}
